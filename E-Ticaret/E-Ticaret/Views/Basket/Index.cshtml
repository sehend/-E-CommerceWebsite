@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Core.Model.Basket>

<h1>Index</h1>


<table id="table" class="table table-sm">
    <thead>
        <tr>
            <th>
                Resim
            </th>
            <th>
                Ürün
            </th>

            <th>
                TotalPrices
            </th>

            <th>

            </th>

            <th>
                Miktar
            </th>


            <th>
                Azalt
            </th>

            <th>
                Arttır
            </th>


            <th>
                Sil
            </th>



        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {


            @foreach (var item in Model)
            {
                <tr>



                    <td>

                        <img style="width:140px;height:140px" class="w-10" src="/UserPicture/@item.image" />

                    </td>

                    <td class="align-middle">@item.ProductName</td>

                    <td class="align-middle">@item.Prices</td>



                    <td>

                        <form asp-controller="Basket" asp-action="Index" method="get">



                    <td class="align-middle">

                                @item.Amount
                    </td>

                    <span class="text-danger " asp-validation-for="@item.Amount"></span>

                    <td class="align-middle">
                                @Html.ActionLink("-","AmountMinus",new{id = item.Id},new {@class="btn btn-info Azalt"})
                    </td>

                    <td class="align-middle">
                                @Html.ActionLink("+","AmountPlus",new{id = item.Id},new {@class="btn btn-info Arttir"})
                    </td>

                    </form>

                    </td>




                    <td class="align-middle"><a class="btn btn-outline-primary" asp-controller="Basket" asp-action="Remove" asp-route-id="@item.Id">Sil</a></td>


                </tr>


            }
        }

</table>
